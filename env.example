# ============================================
# AWS Configuration
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# S3 Configuration
S3_BUCKET_NAME=your-s3-bucket-name

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/your-queue-name

# ============================================
# LlamaCloud Configuration
# Get your API key from: https://cloud.llamaindex.ai/api-key
# ============================================
LLAMA_CLOUD_API_KEY=your-llama-cloud-api-key

# ============================================
# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
# ============================================
OPENAI_API_KEY=your-openai-api-key

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5433
POSTGRES_DB=document_processor
POSTGRES_USER=docuser
POSTGRES_PASSWORD=your-postgres-password
DEBUG_SQL=false

# ============================================
# pgAdmin Configuration (Optional)
# Access pgAdmin at: http://localhost:5050
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@docprocessor.local
PGADMIN_DEFAULT_PASSWORD=your-pgadmin-password

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# Application Configuration
# ============================================
STORAGE_PATH=./storage/uploads
MAX_FILE_SIZE_MB=50
MAX_FILES_PER_REQUEST=100

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# ============================================
# Task Configuration
# ============================================
TASK_RESULT_TTL=3600
